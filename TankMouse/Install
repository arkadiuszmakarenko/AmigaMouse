; Install script for TankMouse USB Mouse Interface
; $VER: TankMouse-Install 1.0 (23.04.23)
 (copylib
   (prompt "TankMouse.driver will be copied to C: drawer.")
   (help )
   (source "TankMouse.driver")
   (confirm)
   (dest "C:")
 )
 (startup ("TankMouse")
  (command "\nIF EXISTS C:TankMouse.driver\n  RUN <>NIL: C:TankMouse.driver\nENDIF" )
  (prompt "\n\n\nInserting\n\n RUN <> NIL: C:TankMouse.driver\n\n into the user-startup")
  (help "\n\nInserting RUN <> NIL: C:TankMouse.driver into the user-startup")
 )
( exit "Installation completed!" "\n\n\nPlease reboot your computer now!" (quiet))
